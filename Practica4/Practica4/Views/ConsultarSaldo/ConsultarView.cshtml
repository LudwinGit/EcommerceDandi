
@{
    ViewBag.Title = "Consulta de Saldo";
    if (Session["CUENTA"] == null || Session["NOMBRE"] == null)
    {
        Response.Redirect("~/Login/vLogin");
    }
}

<head>
    <style>
        #form-div {
            position: absolute;
            left: 40.5%;
            top: 33%;
            border: 1px double #ccc;
            padding: 0px 50px;
        }

        .mylabel {
            color: red;
        }
    </style>
</head>

<div>
    <div class="jumbotron text-center" style="margin-bottom:0">
        <h1>@ViewBag.Title</h1>
    </div>
    <br /> <br /> <br />
    
    <a href="@Url.Action("vPerfil", "Perfil")" class="btn btn-lg btn-warning" id="consultar">Atras</a>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @using (Html.BeginForm("consultar", "ConsultarSaldo", FormMethod.Post))
                {
                    <div class="form-group">
                        <h2>Saldo en su Cuenta:</h2>
                        <h1>@ViewData["saldo"]</h1>
                        <br />
                        <input id="btn" name="btn" type="submit" value="Consultar" class="btn btn-lg btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>