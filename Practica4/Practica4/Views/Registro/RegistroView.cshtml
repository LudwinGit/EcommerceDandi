
@{
    ViewBag.Title = "Nuevo Usuario";
    if (Session["CUENTA"] == null || Session["NOMBRE"] == null)
    {
        Response.Redirect("~/Login/vLogin");
    }
}

<head>
    <style>
        #form-div {
            position: absolute;
            left: 40.5%;
            top: 33%;
            border: 1px double #ccc;
            padding: 0px 50px;
        }

        .mylabel {
            color: red;
        }
    </style>
</head>

<div>
    <div class="jumbotron text-center" style="margin-bottom:0">
        <h1>@ViewBag.Title</h1>
    </div>
    <br /> <br /> <br />
    <div class="container">
        <h3>@TempData["message"] </h3>
        <br />
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @using (Html.BeginForm("registro", "Registro", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="Nombre">Nombre:</label>
                        <input type="text" class="form-control" name=nombre id="nombre" placeholder="Juan Orlando">
                    </div>
                    <div class="form-group">
                        <label for="Apellidos">Apellidos:</label>
                        <input type="text" class="form-control" name=apellidos id="apellidos" placeholder="Gomez Lopez">
                    </div>
                    <div class="form-group">
                        <label for="dpi">DPI:</label>
                        <input type="number" class="form-control" name=dpi id="dpi" placeholder="234543124333">
                    </div>
                    <div class="form-group">
                        <label for="mail">Correo (Opcional):</label>
                        <input type="text" class="form-control" name=mail id="mail" placeholder="ejemplo@gmail.com">
                    </div>
                    <div class="form-group">
                        <label for="Cuenta">Cuenta (6 digitos minimo):</label>
                        <input type="number" class="form-control" name=cuenta id="cuenta" placeholder="1234567890">
                    </div>
                    <div class="form-group">
                        <label for="pass">Contraseña (Entre 8 a 10 caracteres):</label>
                        <input type="password" name=password class="form-control" id="password" placeholder="Contraseña">
                    </div>
                    <input id="btn" name="btn" type="submit" value="Ingresar" class="btn btn-lg btn-success btn-block" />
                }
            </div><br />
            
        </div>
        
        <a href="@Url.Action("vLogin", "Login")" class="btn btn-lg btn-warning" id="consultar">Atras</a>
    </div>
</div>